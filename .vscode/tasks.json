{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Configure Debug x64",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-S",
        ".", // Source directory
        "-B",
        "build/x64", // Build directory
        "-G",
        "Ninja",
        "-DARCH=x64",
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Build Debug x64",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build",
        "${workspaceFolder}\\build\\x64",
        "--config",
        "Debug",
        "--target",
        "sdl-boilerplate"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": [
        "Configure Debug x64"
      ]
    },
    {
      "label": "Configure Debug x86",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-S",
        ".",
        "-B",
        "build/x86",
        "-G",
        "Ninja",
        "-DARCH=x86",
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Build Debug x86",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build",
        "${workspaceFolder}\\build\\x86",
        "--config",
        "Debug",
        "--target",
        "sdl-boilerplate"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": [
        "Configure Debug x86"
      ]
    }
  ]
}