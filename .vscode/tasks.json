{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "configure Debug x64",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-S",
        ".", // Source directory
        "-B",
        "build/x64", // Build directory
        "-G",
        "MinGW Makefiles", // Generator
        "-DCMAKE_C_COMPILER=C:/Program Files/LLVM/bin/clang.exe",
        "-DCMAKE_CXX_COMPILER=C:/Program Files/LLVM/bin/clang++.exe",
        "-DCMAKE_BUILD_TYPE=Debug",
        "-DARCH=x64" // Specify x64 platform
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Build Debug x64",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build",
        "${workspaceFolder}\\build\\x64",
        "--config",
        "Debug",
        "--target",
        "sdl-boilerplate"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": [
        "configure Debug x64"
      ]
    },
    {
      "label": "configure Debug x86",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-S",
        ".",
        "-B",
        "build/x86",
        "-G",
        "MinGW Makefiles",
        "-DCMAKE_C_COMPILER=C:/Program Files/LLVM/bin/clang.exe",
        "-DCMAKE_CXX_COMPILER=C:/Program Files/LLVM/bin/clang++.exe",
        "-DCMAKE_BUILD_TYPE=Debug",
        "-DARCH=x86" // Specify x86 platform
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Build Debug x86",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build",
        "${workspaceFolder}\\build\\x86",
        "--config",
        "Debug",
        "--target",
        "sdl-boilerplate"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": [
        "configure Debug x86"
      ]
    }
  ]
}